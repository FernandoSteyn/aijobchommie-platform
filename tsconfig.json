{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@aijobchommie/shared": ["./packages/shared/src"],
      "@aijobchommie/shared/*": ["./packages/shared/src/*"],
      "@aijobchommie/api": ["./packages/api/src"],
      "@aijobchommie/api/*": ["./packages/api/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "build",
    "**/build",
    ".next",
    "**/.next"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/api"
    },
    {
      "path": "./packages/web"
    },
    {
      "path": "./packages/admin"
    }
  ]
}
