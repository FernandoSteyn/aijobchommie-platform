# AI Job Chommie Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment
NODE_ENV=development

# Application Ports
API_PORT=3001
WEB_PORT=3000
ADMIN_PORT=3002

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/aijobchommie_dev

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# =============================================================================
# REDIS CACHE & SESSION STORE
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Store
SESSION_STORE_URL=redis://localhost:6379/1

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Hugging Face Configuration
HUGGINGFACE_API_TOKEN=your_huggingface_api_token_here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# PAYMENT INTEGRATION (PAYSTACK)
# =============================================================================

# Paystack Configuration for South African payments
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret_here

# Payment Configuration
CURRENCY=ZAR
PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
PAYMENT_CANCEL_URL=http://localhost:3000/payment/cancel

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_PATH=./uploads

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=af-south-1
AWS_S3_BUCKET=aijobchommie-uploads

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email From Configuration
FROM_EMAIL=noreply@aijobchommie.co.za
FROM_NAME=AI Job Chommie

# Production Email (SendGrid, Mailgun, etc.)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key_here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Sentry Configuration (Error Monitoring)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=your_application_insights_key_here

# =============================================================================
# SMS INTEGRATION
# =============================================================================

# Twilio Configuration for SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+27123456789

# Bulk SMS Service (South African providers)
BULKSMS_USERNAME=your_bulksms_username_here
BULKSMS_PASSWORD=your_bulksms_password_here

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
CORS_CREDENTIALS=true

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Algolia Search (Alternative)
ALGOLIA_APP_ID=your_algolia_app_id_here
ALGOLIA_API_KEY=your_algolia_api_key_here
ALGOLIA_SEARCH_KEY=your_algolia_search_only_key_here

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics
GA_TRACKING_ID=your_google_analytics_tracking_id_here
GA_MEASUREMENT_ID=your_google_analytics_measurement_id_here

# Hotjar Analytics
HOTJAR_ID=your_hotjar_site_id_here
HOTJAR_SNIPPET_VERSION=6

# Mixpanel Analytics
MIXPANEL_TOKEN=your_mixpanel_project_token_here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Development Database
DEV_DATABASE_URL=postgresql://postgres:password@localhost:5432/aijobchommie_dev

# Test Database
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/aijobchommie_test

# Debug Configuration
DEBUG=app:*
NODE_OPTIONS=--max-old-space-size=4096

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# AI Features
ENABLE_AI_MATCHING=true
ENABLE_AI_RESUME_ANALYSIS=true
ENABLE_AI_CHAT=false

# Premium Features
ENABLE_PREMIUM_SUBSCRIPTIONS=true
ENABLE_EMPLOYER_ANALYTICS=true
ENABLE_ADVANCED_SEARCH=true

# South African Specific Features
ENABLE_SETA_INTEGRATION=true
ENABLE_UIF_INTEGRATION=false
ENABLE_GOVERNMENT_PROGRAMS=true

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================

# LinkedIn Integration
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================

# Webhook URLs for external services
PAYSTACK_WEBHOOK_URL=http://localhost:3001/api/webhooks/paystack
MAILGUN_WEBHOOK_URL=http://localhost:3001/api/webhooks/mailgun
TWILIO_WEBHOOK_URL=http://localhost:3001/api/webhooks/twilio

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production Database
# DATABASE_URL=postgresql://username:password@prod-host:5432/aijobchommie_prod

# Production Redis
# REDIS_URL=redis://username:password@prod-redis-host:6379

# Production API URLs
# NEXT_PUBLIC_API_URL=https://api.aijobchommie.co.za
# NEXT_PUBLIC_APP_URL=https://aijobchommie.co.za

# SSL Configuration
# FORCE_HTTPS=true
# SSL_CERT_PATH=/path/to/ssl/cert
# SSL_KEY_PATH=/path/to/ssl/key

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit actual API keys or secrets to version control
# 2. Use different values for development, staging, and production
# 3. Some services may require additional configuration
# 4. Update CORS_ORIGIN for production deployments
# 5. Enable HTTPS in production environments
# 6. Use strong, unique secrets for JWT and sessions
# 7. Consider using environment-specific files (.env.dev, .env.prod)

# For production deployment, ensure all secrets are properly secured
# and consider using a secret management service like Azure Key Vault,
# AWS Secrets Manager, or HashiCorp Vault
