# Environment
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
API_VERSION=v1
API_BASE_URL=https://api.aijobchommie.co.za
WEB_BASE_URL=https://aijobchommie.co.za

# Security - CHANGE THESE VALUES!
JWT_SECRET=your-production-jwt-secret-min-32-chars-long
JWT_REFRESH_SECRET=your-production-refresh-secret-min-32-chars-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-char-encryption-key-here

# Database (Production PostgreSQL)
DATABASE_URL=postgresql://username:password@your-db-host:5432/aijobchommie_prod
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Supabase (Production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Redis Cache (Production)
REDIS_URL=redis://username:password@your-redis-host:6379
REDIS_TLS=true
REDIS_DB=0
REDIS_CONNECTION_POOL_SIZE=10

# Rate Limiting (Production - More Restrictive)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=500
API_RATE_LIMIT_MAX=100

# File Upload (Production)
MAX_REQUEST_SIZE=25mb
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/app/uploads
FILE_STORAGE_PROVIDER=supabase
SUPABASE_BUCKET_NAME=aijobchommie-files

# CORS Origins (Production Domains)
CORS_ORIGINS=https://aijobchommie.co.za,https://www.aijobchommie.co.za,https://admin.aijobchommie.co.za

# Paystack Integration (Production)
PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# AI Services (Production)
OPENAI_API_KEY=sk-your-production-openai-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
HUGGINGFACE_API_KEY=hf_your-production-huggingface-key

# Email Service (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@aijobchommie.co.za
SMTP_PASS=your-production-email-password
FROM_EMAIL=noreply@aijobchommie.co.za
SUPPORT_EMAIL=support@aijobchommie.co.za

# Job Scraping (Production)
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; AIJobChommie/1.0; +https://aijobchommie.co.za)
SCRAPER_DELAY=3000
SCRAPER_TIMEOUT=30000
SCRAPER_RATE_LIMIT=60

# Monitoring & Analytics
SENTRY_DSN=https://your-production-sentry-dsn
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEW_RELIC_LICENSE_KEY=your-newrelic-key
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# External APIs
GEOLOCATION_API_KEY=your-geolocation-api-key
SMS_API_KEY=your-sms-api-key
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+27XXXXXXXXX

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# CDN & Static Assets
CDN_BASE_URL=https://cdn.aijobchommie.co.za
STATIC_ASSETS_URL=https://assets.aijobchommie.co.za

# Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_SMS_ALERTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false

# Performance Settings
CACHE_TTL=3600
SESSION_TIMEOUT=86400
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30000

# Security Headers
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://js.paystack.co; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.paystack.co;

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=s3://aijobchommie-backups/production

# Company Information
COMPANY_NAME=AI Job Chommie (Pty) Ltd
COMPANY_REGISTRATION=your-company-registration-number
COMPANY_VAT_NUMBER=your-vat-number
COMPANY_ADDRESS=Port Elizabeth, Eastern Cape, South Africa
COMPANY_PHONE=+27XXXXXXXXX
COMPANY_EMAIL=info@aijobchommie.co.za
