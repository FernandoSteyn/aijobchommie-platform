# Environment
NODE_ENV=staging
PORT=3001
HOST=0.0.0.0
API_VERSION=v1
API_BASE_URL=https://api-staging.aijobchommie.co.za
WEB_BASE_URL=https://staging.aijobchommie.co.za

# Security - Use staging-specific secrets
JWT_SECRET=your-staging-jwt-secret-min-32-chars-long
JWT_REFRESH_SECRET=your-staging-refresh-secret-min-32-chars-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-staging-32-char-encryption-key

# Database (Staging PostgreSQL)
DATABASE_URL=postgresql://username:password@your-staging-db-host:5432/aijobchommie_staging
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_SSL=true

# Supabase (Staging)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# Redis Cache (Staging)
REDIS_URL=redis://username:password@your-staging-redis-host:6379
REDIS_TLS=true
REDIS_DB=1
REDIS_CONNECTION_POOL_SIZE=5

# Rate Limiting (Staging - Less Restrictive)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
API_RATE_LIMIT_MAX=200

# File Upload (Staging)
MAX_REQUEST_SIZE=50mb
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
FILE_STORAGE_PROVIDER=supabase
SUPABASE_BUCKET_NAME=aijobchommie-files-staging

# CORS Origins (Staging Domains)
CORS_ORIGINS=https://staging.aijobchommie.co.za,https://api-staging.aijobchommie.co.za,http://localhost:3000,http://localhost:5173

# Paystack Integration (Test Mode)
PAYSTACK_SECRET_KEY=sk_test_your_test_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_test_public_key
PAYSTACK_WEBHOOK_SECRET=your_test_webhook_secret

# AI Services (Staging - Can use same as production but with limits)
OPENAI_API_KEY=sk-your-staging-openai-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=800
HUGGINGFACE_API_KEY=hf_your-staging-huggingface-key

# Email Service (Staging - Use MailHog or test SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password
FROM_EMAIL=noreply-staging@aijobchommie.co.za
SUPPORT_EMAIL=support-staging@aijobchommie.co.za

# Job Scraping (Staging - More relaxed)
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; AIJobChommie-Staging/1.0; +https://staging.aijobchommie.co.za)
SCRAPER_DELAY=2000
SCRAPER_TIMEOUT=25000
SCRAPER_RATE_LIMIT=100

# Monitoring & Analytics
SENTRY_DSN=https://your-staging-sentry-dsn
GOOGLE_ANALYTICS_ID=G-STAGING-XXXX
LOG_LEVEL=debug
LOG_FILE_PATH=/app/logs/app.log

# External APIs (Can use test/sandbox versions)
GEOLOCATION_API_KEY=your-test-geolocation-api-key
SMS_API_KEY=your-test-sms-api-key
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-test-twilio-sid
TWILIO_AUTH_TOKEN=your-test-twilio-token
TWILIO_PHONE_NUMBER=+27XXXXXXXXX

# Social Media Integration (Test Apps)
FACEBOOK_APP_ID=your-test-facebook-app-id
FACEBOOK_APP_SECRET=your-test-facebook-app-secret
LINKEDIN_CLIENT_ID=your-test-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-test-linkedin-client-secret

# CDN & Static Assets
CDN_BASE_URL=https://cdn-staging.aijobchommie.co.za
STATIC_ASSETS_URL=https://assets-staging.aijobchommie.co.za

# Feature Flags (Staging can test new features)
ENABLE_AI_MATCHING=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_SMS_ALERTS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false

# Performance Settings
CACHE_TTL=1800
SESSION_TIMEOUT=43200
MAX_CONCURRENT_REQUESTS=500
REQUEST_TIMEOUT=30000

# Security Headers (Less strict for testing)
HSTS_MAX_AGE=0
CONTENT_SECURITY_POLICY=default-src 'self' 'unsafe-inline' 'unsafe-eval'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.paystack.co; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.paystack.co;

# Backup & Recovery
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 4 * * *
BACKUP_RETENTION_DAYS=7

# Company Information
COMPANY_NAME=AI Job Chommie (Pty) Ltd - STAGING
COMPANY_REGISTRATION=your-company-registration-number
COMPANY_VAT_NUMBER=your-vat-number
COMPANY_ADDRESS=Port Elizabeth, Eastern Cape, South Africa
COMPANY_PHONE=+27XXXXXXXXX
COMPANY_EMAIL=info-staging@aijobchommie.co.za
